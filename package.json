{
    "name": "ts-server",
    "version": "1.0.0",
    "description": "Easily create back end servers with powerful API's using TypeScript and Express.",
    "main": "lib/",
    "types": "lib/",
    "author": "Josh Merlino",
    "license": "ISC",
    "webserver": {
        "http": {
            "port": 80,
            "timeout": 10
        },
        "https": {
            "enabled": true,
            "port": 443,
            "certs": "./ssl"
        }
    },
    "scripts": {
        "watch-ts": "tsc -w",
        "watch-js": "nodemon .",
        "dev": "concurrently \"npm:watch-*\"",
        "start": "node .",
        "build": "tsc"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/http-proxy": "^1.17.9",
        "@typescript-eslint/eslint-plugin": "^5.41.0",
        "@typescript-eslint/parser": "^5.30.0",
        "concurrently": "^7.2.2",
        "eslint": "^8.18.0",
        "nodemon": "^2.0.18",
        "typescript": "^4.7.4",
        "typescript-eslint": "0.0.1-alpha.0"
    },
    "dependencies": {
        "@types/request": "^2.48.8",
        "chalk": "^4.1.2",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "filestore-json": "^1.1.8",
        "http-proxy": "^1.18.1",
        "request": "^2.88.2",
        "yaml": "^2.1.1"
    }
}
