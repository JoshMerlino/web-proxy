{
    "name": "ts-server",
    "version": "1.0.0",
    "description": "Easily create back end servers with powerful API's using TypeScript and Express.",
    "main": "lib/",
    "types": "lib/",
    "author": "Josh Merlino",
    "license": "ISC",
    "webserver": {
        "http": {
            "port": 80,
            "timeout": 10
        },
        "https": {
            "enabled": true,
            "port": 443,
            "certs": "./ssl"
        }
    },
    "scripts": {
        "watch-ts": "tsc -w",
        "watch-js": "nodemon .",
        "dev": "concurrently \"npm:watch-*\"",
        "start": "node .",
        "build": "tsc"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "concurrently": "^6.5.1",
        "@typescript-eslint/parser": "^4.33.0",
        "eslint": "^7.32.0",
        "nodemon": "^2.0.15",
        "typescript": "^4.5.4",
        "typescript-eslint": "0.0.1-alpha.0"
    },
    "dependencies": {
        "@types/request": "^2.48.7",
        "chalk": "^4.1.2",
        "dotenv": "^14.1.0",
        "express": "^4.17.2",
        "filestore-json": "^1.1.8",
        "request": "^2.88.2",
        "yaml": "^1.10.2"
    }
}